<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.hub.merge.MergeCustomersFragment">

        <ImageView
            android:id="@+id/merge_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_stroke"
            android:src="@drawable/ic_search_24"
            app:layout_constraintBottom_toTopOf="@id/unregistered_users_rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/search_text"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:completionThreshold="2"
            android:hint="@string/search_customer_hint"
            android:inputType="textPersonName"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/merge_search_btn"
            app:layout_constraintEnd_toEndOf="@id/merge_search_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/merge_search_btn" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/merge_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/merge_profile_hint"
            app:layout_constraintBottom_toBottomOf="@id/merge_search_btn"
            app:layout_constraintBottom_toTopOf="@id/unregistered_users_rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/merge_search_btn" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/unregistered_users_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/merge_hint"
            tools:listitem="@layout/merge_profile_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>