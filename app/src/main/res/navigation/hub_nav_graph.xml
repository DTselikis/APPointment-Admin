<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hub_nav_graph"
    app:startDestination="@id/customersFragment">

    <fragment
        android:id="@+id/customersFragment"
        android:name="com.homelab.appointmentadmin.ui.hub.customers.CustomersFragment"
        android:label="CustomersFragment"
        tools:layout="@layout/fragment_customers">
        <action
            android:id="@+id/action_customersFragment_to_customerProfileActivity"
            app:destination="@id/customerProfileActivity" />
        <action
            android:id="@+id/action_customersFragment_to_customerProfileFragment"
            app:destination="@id/customerProfileFragment" />
    </fragment>
    <activity
        android:id="@+id/customerProfileActivity"
        android:name="com.homelab.appointmentadmin.ui.customer.CustomerProfileActivity"
        android:label="CustomerProfileActivity"
        tools:layout="@layout/activity_customer_profile">
        <argument
            android:name="user"
            app:argType="com.homelab.appointmentadmin.data.User" />
    </activity>
    <fragment
        android:id="@+id/customerProfileFragment"
        android:name="com.homelab.appointmentadmin.ui.customer.CustomerProfileFragment"
        android:label="CustomerProfileFragment"
        tools:layout="@layout/fragment_customer_profile">
        <argument
            android:name="user"
            app:argType="com.homelab.appointmentadmin.data.User" />
    </fragment>
</navigation>